@model InitialDataViewModel
@{
    ViewBag.Title = "Snittlistan V2";
    Layout = "";
    Bundles.Reference("Content/css/main.less");
    Bundles.Reference("Content/templates");
    Bundles.Reference("Content/js/app");
    Bundles.Reference("Content/external/hogan/hogan.js", "hogan");
}
<!DOCTYPE html>
<html lang="se">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewBag.Title</title>
        <link href="http://current.bootstrapcdn.com/bootstrap-v204/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <style type="text/css">
            body
            {
                /* necessary so that header doesn't hide content */
                padding-top: 40px;
            }
        </style>
        <link href="http://current.bootstrapcdn.com/bootstrap-v204/css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css" />
        @Bundles.RenderStylesheets()
        <!--[if lt IE 9]><script src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6/html5shiv.min.js"></script><![endif]-->
    </head>
    <body>
        @* header will be placed here, as first element under body *@
        @* modal dialogs are placed here *@
        <div id="login-modal" class="modal hide fade">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Logga in</h3>
            </div>
            <div class="modal-body">
                <p>Logga in genom att ange din e-postadress och ditt lösenord.</p>
                <form id="login-form" class="well">
                    <label>E-postadress:</label>
                    <input type="email" name="email" placeholder="E-postadress" />
                    <label>Lösenord:</label>
                    <input type="password" name="password" placeholder="Lösenord" />
                    <label class="checkbox">
                        <input type="checkbox" name="remember" />Kom ihåg mig
                    </label>
                    <button id="login-button" class="btn btn-primary" type="submit">Logga in</button>
                    <button class="btn btn-primary" data-toggle="modal" data-target="#login-modal">Avbryt</button>
                </form>
            </div>
        </div>
        <div id="main" class="container-fluid">
            @*
            <section class="page-header">
                <h1>Kommande matchomgångar</h1>
            </section>
            <div class="row-fluid">
                <div class="span6">
                    <div class="alert alert-info">
                        <button class="close" data-dismiss="alert">
                            <i class="icon-pencil"></i>
                        </button>
                        Om du inte kan medverka, vänligen meddela detta så tidigt som möjligt.
                        <i class="icon-question-sign pull-right" title="Meddelande" data-content="Här tänkte jag att pennan är klickbar, och att man då kan redigera texten. Troligen måste man ha en viss roll för att ha möjlighet att ändra texten."></i>
                    </div>
                </div>
                <div class="span6">
                    <div class="alert alert-error">
                        <button class="close" data-dismiss="alert">&times;</button>
                        <button class="btn btn-mini btn-primary">Logga in</button> för att kvittera spel eller meddela din frånvaro.
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                @Html.Partial("_Turn3")
            </div>
            *@
            @*
            <section class="page-header">
                <h1>
                    Avklarade
                    <i class="icon-question-sign" title="Avklarade omgångar" data-placement="right" data-content="Den här delen kommer vara en egen sida."></i>
                </h1>
            </section>
            <div class="row-fluid">
                <div class="span3">
                    <table class="table table-medals">
                        <tr><th colspan="2">Medaljer</th></tr>
                        <tr><td><span class="label label-personal-best">PB</span></td><td>Personbästa</td></tr>
                        <tr><td><span class="label label-season-best">SB</span></td><td>Säsongsbästa</td></tr>
                        <tr><td><span class="label label-miss-free">missfri</span></td><td>En serie med enbart täckta rutor</td></tr>
                        <tr><td><span class="label label-300">300</span></td><td>En 300-serie</td></tr>
                    </table>
                </div>
            </div>
            <div class="row-fluid">
                @Html.Partial("_CompletedTurns")
            </div>
            *@
            @*
            <section class="page-header">
                <h1>
                    Christer Liedholm
                    <i class="icon-question-sign" title="Att göra" data-placement="right" data-content="Lägg till vy för spelare. En spelares medaljer ska visas. Lägg till förklaring på medaljerna (eller titel åtminstone). Lägg till vy för att göra laguttagningen."></i>
                </h1>
            </section>
            <div class="row-fluid">
                @Html.Partial("_Player")
            </div>
            *@
        </div>

        @* Use content delivery networks *@
        @Content.Script(ScriptType.JQuery)
        <script src="http://current.bootstrapcdn.com/bootstrap-v204/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.3/underscore-min.js" type="text/javascript"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.2/backbone-min.js" type="text/javascript"></script>

        @* local scripts *@
        @Bundles.RenderScripts("hogan")
        @Bundles.RenderHtmlTemplates()
        @* Place initial data here. *@
        <script type="text/javascript">
            (function (app, undefined) {
                "use strict";
                app.initial_data = @Html.ToJson(Model);
            }(window.App = window.App || { }));
        </script>
        @Bundles.RenderScripts()
    </body>
</html>
