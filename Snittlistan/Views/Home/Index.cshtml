@model List<PlayerStatsViewModel>

@{
    ViewBag.Title = "Snittlistan";
}

<table>
    <thead>
        <tr>
            <th></th>
            <th>Namn</th>
            <th>Serier</th>
            <th>Banpoäng</th>
            <th>Medel</th>
            <th>Högsta</th>
            <th>X</th>
            <th>Miss</th>
            <th>9-</th>
            <th>Hål</th>
            <th>Täckta</th>
            <th>Senaste 20</th>
        </tr>
    </thead>
    <tbody>
        @for (int i=0; i<Model.Count; i++)
        {
            var stat = Model[i];
            <tr>
                <td>@(i+1)</td>
                <td>@Html.ActionLink(stat.Player, "Player", new { player = stat.Player })</td>
                <td>@stat.Series</td>
                <td>@(string.Format("{0:F2}", stat.AverageScore))</td>
                <td>@(string.Format("{0:F1}", stat.AveragePins))</td>
                <td>@stat.Max</td>
                <td>@(string.Format("{0:F2}", stat.AverageStrikes))</td>
                <td>@(string.Format("{0:F2}", stat.AverageMisses))</td>
                <td>@(string.Format("{0:F2}", stat.AverageOnePinMisses))</td>
                <td>@(string.Format("{0:F2}", stat.AverageSplits))</td>
                <td>@stat.CoveredAll</td>
                <td>@string.Format("{0:F1}", stat.AverageLast20)</td>
            </tr>
        }
    </tbody>
</table>