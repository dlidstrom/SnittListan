@model PlayerMatches

@{
    ViewBag.Title = Model.Player;
}

<h2>@ViewBag.Title</h2>

<table>
    <tr>
        <th>Plats</th>
        <th>Klubb</th>
        <th>Datum</th>
        <th>Resultat</th>
        <th>Medel</th>
        <th>Serier</th>
        <th></th>
    </tr>

@foreach (var item in Model.Stats) {
    <tr>
        <td>@item.Location</td>
        <td>@item.Team</td>
        <td>@Html.DisplayFor(modelItem => item.Date)</td>
        <td>@item.Pins</td>
        <td>@string.Format("{0:F1}", (double)item.Pins / item.Series)</td>
        <td>@item.Series</td>
        <td>@Html.ActionLink("Visa", "Details", "Match", new { id = item.MatchId.Substring(8) }, new { })</td>
    </tr>
}

</table>
