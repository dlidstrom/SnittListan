@{
    ViewBag.Title = "Snittlistan V2";
    Layout = "";
}
<!DOCTYPE html>
<html lang="se">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
        <style type="text/css">
            body
            {
                /* necessary so that header doesn't hide content */
                padding-top: 40px;
            }
        </style>
        <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/css/main.css")" rel="stylesheet" type="text/css" />
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    </head>
    <body>
        <section class="navbar navbar-fixed-top">
            <section class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="@Url.Action("v2")">@ViewBag.Title</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li>
                                <a href="#">
                                    <i class="icon-user icon-white"></i>
                                    Spelare
                                </a>
                            </li>
                            <li class="active">
                                <a href="#">
                                    <i class="icon-calendar icon-white"></i>
                                    Kommande matchomgångar
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="icon-list-alt icon-white"></i>
                                    Uttagningar
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </section>
        </section>
        <section class="container-fluid">
            <section class="page-header">
                <h1>
                    Kommande matchomgångar
                </h1>
                <p>Anmäl din närvaro.</p>
            </section>
            <h3>Omgång 1 (8 sep&minus;9 sep)</h3>
            <button class="btn btn-primary">Tillgänglig hela helgen</button>
            <div class="row-fluid">
                <div class="span4">
                    <section class="well well-small">
                        <h4>Fredrikshof A</h4>
                        <table class="table table-condensed">
                            <tr>
                                <td>Brandbergen, 8 sep, 10:00, Vendelsö BK</td>
                                <td>
                                    <button class="btn btn-success btn-small">
                                        <i class="icon-ok icon-white"></i>
                                        Kan
                                    </button>
                                    <button class="btn btn-danger btn-small">
                                        <i class="icon-remove icon-white"></i>
                                        Kan inte
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <span class="badge badge-success">5</span>
                                    <span class="badge badge-important">4</span>
                                </td>
                            </tr>
                            <tr>
                                <td>Brandbergen, 8 sep, 10:00, Vendelsö BK</td>
                                <td>
                                    <button class="btn btn-success btn-small">
                                        <i class="icon-ok icon-white"></i>
                                        Kan
                                    </button>
                                    <button class="btn btn-danger btn-small">
                                        <i class="icon-remove icon-white"></i>
                                        Kan inte
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <span class="badge badge-success">5</span>
                                    <span class="badge badge-important">4</span>
                                </td>
                            </tr>
                        </table>
                    </section>
                </div>
                <div class="span4">
                    <section class="well well-small">
                        <h4>Fredrikshof F</h4>
                        <table class="table table-condensed">
                            <tr>
                                <td>Birka, 8 sep, 10:00, IFK Stockholm</td>
                                <td>
                                    <button class="btn btn-success btn-small">
                                        <i class="icon-ok icon-white"></i>
                                        Kan
                                    </button>
                                    <button class="btn btn-danger btn-small">
                                        <i class="icon-remove icon-white"></i>
                                        Kan inte
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <span class="badge badge-success">7</span>
                                    <span class="badge badge-important">1</span>
                                </td>
                            </tr>
                        </table>
                    </section>
                </div>
                <div class="span4">
                    <section class="well well-small">
                        <h4>Fredrikshof B</h4>
                        <table class="table table-condensed">
                            <tr>
                                <td>Bowl-O-Rama, 8 sep, 10:00, KKT B</td>
                                <td>
                                    <button class="btn btn-success btn-small">
                                        <i class="icon-ok icon-white"></i>
                                        Kan
                                    </button>
                                    <button class="btn btn-danger btn-small">
                                        <i class="icon-remove icon-white"></i>
                                        Kan inte
                                    </button>
                                </td>
                                <td>
                                    <span class="badge badge-success">3</span>
                                    <span class="badge badge-important">2</span>
                                </td>
                            </tr>
                        </table>
                    </section>
                </div>
            </div>
        </section>

        @* Use content delivery networks *@
        @Content.Script(ScriptType.JQuery)
        @* Include other scripts from cdnjs.com when possible *@
        <script src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.3/underscore-min.js" type="text/javascript"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.2/backbone-min.js" type="text/javascript"></script>

        @* local scripts *@
        <script type="text/javascript" src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")"></script>
    </body>
</html>
