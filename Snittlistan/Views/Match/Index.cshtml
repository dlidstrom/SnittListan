@model IEnumerable<MatchViewModel.MatchDetails>

@{
    ViewBag.Title = "Matcher";
}

@helper CreateEditLink(MatchViewModel.MatchDetails item)
{
    if (Request.IsAuthenticated)
    {
        <text>@Html.ActionLink("Redigera", "Edit", new { id = item.Id }) |</text>
    }
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Registrera ny", "Create")
</p>
<table>
    <tr>
        <th>Datum</th>
        <th>Match</th>
        <th>Resultat</th>
        <th>Plats</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Date)</td>
        <td>@Html.DisplayFor(modelItem => item.HomeTeam) - @Html.DisplayFor(modelItem => item.AwayTeam)</td>
        <td>@Html.DisplayFor(modelItem => item.HomeTeamScore)-@Html.DisplayFor(modelItem => item.AwayTeamScore)</td>
        <td>@Html.DisplayFor(modelItem => item.Place)</td>
        <td>
            @CreateEditLink(item)
            @Html.ActionLink("Detaljer", "Details", new { id = item.Id })
            @* | @Html.ActionLink("Ta bort", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
