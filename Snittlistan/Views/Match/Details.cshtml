@model MatchViewModel
@{
    ViewBag.Title = "Detaljer";
}

<h2>@ViewBag.Title</h2>
@Html.GenerateEditBackLinks(Model.Match)

<fieldset>
    <legend>Match</legend>
    <table>
        <tr>
            <td>Datum</td><td>@Html.DisplayFor(model => model.Match.Date)</td>
        </tr>
        <tr>
            <td>Match</td><td>@Html.DisplayFor(model => model.HomeTeam.Name) - @Html.DisplayFor(model => model.AwayTeam.Name)</td>
        </tr>
        <tr>
            <td>Resultat</td><td>@Html.DisplayFor(model => model.HomeTeam.Score)-@Html.DisplayFor(model => model.AwayTeam.Score)</td>
        </tr>
        <tr>
            <td>Plats</td><td>@Html.DisplayFor(model => model.Match.Place)</td>
        </tr>
        <tr>
            <td>BITS</td><td>@Html.GenerateBitsLink(Model.Match)</td>
        </tr>
    </table>
    <div class="games-viewmodel">
        <h3>Hemmalag</h3>
        @Html.DisplayFor(model => model.HomeTeam.Games, "Games")
    </div>
    <div class="games-viewmodel">
        <h3>Bortalag</h3>
        @Html.DisplayFor(model => model.AwayTeam.Games, "Games")
    </div>
</fieldset>