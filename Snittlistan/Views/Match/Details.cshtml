@model MatchViewModel
@{
    ViewBag.Title = string.Format("Match {0}-{1}", Model.HomeTeam.Name, Model.AwayTeam.Name);
}

<fieldset>
    <legend>Match</legend>
    @Html.DisplayFor(model => model.Match, "MatchDisplay")
    @if (Request.IsAuthenticated)
    {
        <p>@Html.ActionLink("Redigera", "EditDetails", new { id = Model.Match.Id }, new { data_button = "data_button" })
        | @Html.ActionLink("Ta bort", "Delete", new { id = Model.Match.Id }, new { data_button = "data_button" })</p>
    }
    <h3>Hemmalag</h3>
    @Html.DisplayFor(model => model.HomeTeam, "TeamDisplay")
    @if (Request.IsAuthenticated)
    {
        <p>@Html.ActionLink("Redigera", "EditTeam", new { id = Model.Match.Id, isHomeTeam = true }, new { data_button = "data_button" })</p>
    }
    <h3>Bortalag</h3>
    @Html.DisplayFor(model => model.AwayTeam, "TeamDisplay")
    @if (Request.IsAuthenticated)
    {
        <p>@Html.ActionLink("Redigera", "EditTeam", new { id = Model.Match.Id, isHomeTeam = false }, new { data_button = "data_button" })</p>
    }
</fieldset>