@model MatchViewModel
@{
    ViewBag.Title = "Detaljer";
}

<h2>@ViewBag.Title</h2>
<p>@Html.ActionLink("Tillbaka", "Index")</p>

<fieldset>
    <legend>Match</legend>
    @Html.DisplayFor(model => model.Match, "MatchDisplay")
    @if (Request.IsAuthenticated)
    {
        <p>@Html.ActionLink("Redigera", "EditDetails", new { id = Model.Match.Id })</p>
    }
    <div class="games-viewmodel">
        <h3>Hemmalag</h3>
        @Html.DisplayFor(model => model.HomeTeam, "TeamDisplay")
        @if (Request.IsAuthenticated)
        {
            <p>@Html.ActionLink("Redigera", "EditHomeTeam", new { id = Model.Match.Id })</p>
        }
    </div>
    <div class="games-viewmodel">
        <h3>Bortalag</h3>
        @Html.DisplayFor(model => model.AwayTeam, "TeamDisplay")
        @if (Request.IsAuthenticated)
        {
            <p>@Html.ActionLink("Redigera", "EditAwayTeam", new { id = Model.Match.Id })</p>
        }
    </div>
</fieldset>