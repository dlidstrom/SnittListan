@model MatchViewModel

@{
    ViewBag.Title = "Edit";
}

@section scripts
{
    @Content.Script("jquery.validate.min.js", Url)
    @Content.Script("jquery.validate.unobtrusive.min.js", Url)
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>MatchViewModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Match.Place)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Match.Place)
            @Html.ValidationMessageFor(model => model.Match.Place)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Match.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Match.Date)
            @Html.ValidationMessageFor(model => model.Match.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Match.HomeTeam)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Match.HomeTeam)
            @Html.ValidationMessageFor(model => model.Match.HomeTeam)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Match.HomeTeamScore)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Match.HomeTeamScore)
            @Html.ValidationMessageFor(model => model.Match.HomeTeamScore)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Match.AwayTeam)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Match.AwayTeam)
            @Html.ValidationMessageFor(model => model.Match.AwayTeam)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Match.AwayTeamScore)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Match.AwayTeamScore)
            @Html.ValidationMessageFor(model => model.Match.AwayTeamScore)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Match.BitsMatchId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Match.BitsMatchId)
            @Html.ValidationMessageFor(model => model.Match.BitsMatchId)
        </div>
        <div class="games-viewmodel">
            <h3>Hemmalag</h3>
            @Html.EditorFor(model => model.HomeTeamGames, "Games")
        </div>
        <div class="games-viewmodel">
            <h3>Bortalag</h3>
            @Html.EditorFor(model => model.AwayTeamGames, "Games")
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
