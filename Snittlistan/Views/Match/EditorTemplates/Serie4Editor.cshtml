                {
                    type = "number",
                    data_bind = string.Format("enable: team_{0}_player1_strikes{1}, css: {{ 'input-validation-error': team_{0}_player1_strikes{1} }}", team, serie)
                })</td>
            <td>@Html.CheckBoxFor(
                model => model.Game1.CoveredAll,
                new
