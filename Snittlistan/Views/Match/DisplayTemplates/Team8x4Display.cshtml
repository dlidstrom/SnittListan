@model Team8x4DetailsViewModel

<table class="invis">
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Name)</td>
        <td class="editor-field">@Html.DisplayFor(model => model.Name)</td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Score)</td>
        <td class="editor-field">@Html.DisplayFor(model => model.Score)</td>
    </tr>
</table>
<table>
    <tr>
        <th>Serie</th>
        <th colspan="3">Bord 1</th>
        <th colspan="3">Bord 2</th>
        <th colspan="3">Bord 3</th>
        <th colspan="3">Bord 4</th>
    </tr>
    @for (int i = 0; i < Model.Series.Count; i++)
    {
        <tr>
            <td rowspan="2">@(i+1)</td>
            @for (int j = 0; j < Model.Series[i].Tables.Count; j++)
            {
                <td>@Model.Series[i].Tables[j].Game1.Player</td>
                <td>@Model.Series[i].Tables[j].Game1.Pins</td>
                <td>@Model.Series[i].Tables[j].Score</td>
            }
        </tr>
        <tr>
            @for (int j = 0; j < Model.Series[i].Tables.Count; j++)
            {
                <td>@Model.Series[i].Tables[j].Game2.Player</td>
                <td>@Model.Series[i].Tables[j].Game2.Pins</td>
                <td>@Model.Series[i].Tables[j].Total</td>
            }
        </tr>
    }
</table>