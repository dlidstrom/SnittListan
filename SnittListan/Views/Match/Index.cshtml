@model IEnumerable<MatchViewModel>

@{
    ViewBag.Title = "Matcher";
}

<h2>Matcher</h2>

<p>
    @Html.ActionLink("Registrera ny", "Create")
</p>
<table>
    <tr>
        <th>Datum</th>
        <th>Match</th>
        <th>Resultat</th>
        <th>Plats</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Date)</td>
        <td>@Html.DisplayFor(modelItem => item.HomeTeam) - @Html.DisplayFor(modelItem => item.OppTeam)</td>
        <td>@Html.DisplayFor(modelItem => item.HomeTeamLaneScore)-@Html.DisplayFor(modelItem => item.OppTeamLaneScore)</td>
        <td>@Html.DisplayFor(modelItem => item.Place)</td>
        <td>
@if (Request.IsAuthenticated)
{
            <text>@Html.ActionLink("Redigera", "Edit", new { id=item.Id }) |</text>
}
            @Html.ActionLink("Detaljer", "Details", new { id=item.Id })
            @* | @Html.ActionLink("Ta bort", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
