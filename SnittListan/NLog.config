<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true">
	<targets>
		<target name="rolling-file"
				xsi:type="File"
				archiveAboveSize="10485760"
				archiveFileName="${basedir}/logs/logfile.{#}.log"
				archiveNumbering="Rolling"
				fileName="${basedir}/logs/logfile.txt"
				layout="${longdate} ${threadid:padding=3} ${level:upperCase=true:padding=-5} - ${message} ${exception:format=ToString}" />
	</targets>
	<rules>
		<logger name="*" minlevel="Debug" writeTo="rolling-file" />
	</rules>
</nlog>