@model Team4x4ViewModel

@{
    // used in player editors
    int team = Convert.ToInt32(ViewData["team"]);
}

<table class="invis">
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Name)</td>
        <td class="editor-field">
            @Html.TextBoxFor(
                model => model.Name,
                new
                    {
                        data_autocomplete = Url.Action("TeamsQuickSearch", "Search")
                    })
            @Html.ValidationMessageFor(model => model.Name)
        </td>
    </tr>
    <tr>
        <td class="editor-label">@Html.LabelFor(model => model.Score)</td>
        <td class="editor-field">
            @Html.EditorFor(model => model.Score)
            @Html.ValidationMessageFor(model => model.Score)
        </td>
    </tr>
</table>

<h3>@Html.LabelFor(model => model.Player1)</h3>
@Html.EditorFor(model => model.Player1, "PlayerEditor", new { player = 1 })

<h3>@Html.LabelFor(model => model.Player2)</h3>
@Html.EditorFor(model => model.Player2, "PlayerEditor", new { player = 2 })

<h3>@Html.LabelFor(model => model.Player3)</h3>
@Html.EditorFor(model => model.Player3, "PlayerEditor", new { player = 3 })

<h3>@Html.LabelFor(model => model.Player4)</h3>
@Html.EditorFor(model => model.Player4, "PlayerEditor", new { player = 4 })