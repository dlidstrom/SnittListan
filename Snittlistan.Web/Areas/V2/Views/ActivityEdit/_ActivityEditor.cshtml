@model Snittlistan.Web.Areas.V2.Controllers.ActivityEditController.ActivityEditViewModel

<div class="control-group">
    <label class="control-label" for="season">Säsong:</label>
    <div class="controls">
        <input type="text"
               id="season"
               name="season"
               placeholder="Säsong"
               autofocus="autofocus"
               title="Ange säsong"
               pattern="\d*"
               required="required"
               value="@Model.Season" />
        <span class="help-block">
            Ange säsongen för matchen. Skriv första delen av säsongen, t.ex. <strong>@Model.Season</strong>&minus;@(Model.Season + 1).
            Vanligtvis är det redan rätt ifyllt.
        </span>
    </div>
</div>
<div class="control-group">
    @Html.LabelFor(x => x.Title, new { @class = "control-label" })
    <div class="controls">
        @Html.TextBoxFor(x => x.Title, new { required = "required", maxlength = "80" })
    </div>
</div>
<div class="control-group">
    <label class="control-label" for="date">Datum:</label>
    <div class="controls">
        <input type="datetime-local"
               id="date"
               name="date"
               value="@(Model.Date?.ToString("yyyy-MM-ddTHH:mm:ss"))"
               required />
    </div>
</div>
<div class="control-group">
    @Html.LabelFor(x => x.Message, new { @class = "control-label" })
    <div class="controls">
        @Html.TextAreaFor(x => x.Message, 10, 10, new { required = "required", maxlength = "1024" })
    </div>
</div>
