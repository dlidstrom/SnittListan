@model CreateAbsenceViewModel

<div class="control-group">
    <label class="control-label" for="player">Spelare:</label>
    <div class="controls">
        @Html.DropDownList("Player", null, new { required = "required", id="player" })
    </div>
</div>
<div class="control-group">
    <label class="control-label" for="from">Från:</label>
    <div class="controls">
        <input type="date"
               name="from"
               id="from"
               value="@Model.From.ToShortDateString()"
               required />
    </div>
</div>
<div class="control-group">
    <label class="control-label" for="to">Till:</label>
    <div class="controls">
        <input type="date"
               name="to"
               id="to"
               value="@Model.To.ToShortDateString()"
               required />
    </div>
</div>
<div class="control-group">
    <label class="control-label" for="comment">Kommentar:</label>
    <div class="controls">
        <input type="text"
               name="comment"
               id="comment"
               maxlength="160"
               value="@Model.Comment" />
    </div>
</div>
