@model Snittlistan.Web.Areas.V2.Controllers.ActivityIndexController.IndexViewModel

<div class="row">
    <div class="span12">
        <h4>Träningsaktiviteter och träffar</h4>
    </div>
</div>
<div class="row">
    <div class="span12">
        <a href="@Url.Action("Create", "ActivityEdit")">
            <i class="sprite-glyphicons_030_pencil"></i>
            Lägg till aktivitet
        </a>
    </div>
</div>
<div class="row">
    <div class="span12">
        <table class="table table-condensed table-striped">
            <thead>
                <tr>
                    <th>Aktivitet</th>
                    <th>Datum</th>
                    <th>Text</th>
                    <th colspan="2">Redigera</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td rowspan="3">
                            @item.Title
                        </td>
                        <td rowspan="3">
                            <time datetime="@item.Date.ToString("s")">
                                @item.Date.ToString("dddd d MMMM HH:mm")
                            </time>
                        </td>
                        <td rowspan="3">
                            <div class="cropped-message-free">
                                @item.MessageHtml
                            </div>
                        </td>
                        <td>
                            @Html.ActionLink("Redigera", "Edit", "ActivityEdit", new { item.Id }, null)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.ActionLink("Ta bort", "Delete", "ActivityEdit", new { item.Id }, null)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.ActionLink("Visa", "Index", "ActivityDetails", null, null, "disqus_thread", new { item.Id }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>