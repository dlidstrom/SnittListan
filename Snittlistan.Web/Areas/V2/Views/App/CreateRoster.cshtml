@model CreateRosterViewModel

@{
    ViewBag.Title = "Lägg till match";
}

<div class="row">
    <div class="span6">
        <h3>@ViewBag.Title</h3>
        @using (Html.BeginForm("CreateRoster", "App", FormMethod.Post, new { @class = "well form-horizontal"}))
        {
            @Html.ValidationSummary(false, "Det gick inte att spara. Försök gärna igen.")
            <div class="control-group">
                <label class="control-label" for="season">Säsong:</label>
                <div class="controls">
                    <input type="text" name="season" placeholder="Säsong" autofocus="autofocus" required="required" value="@Model.Season" />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="turn">Omgång:</label>
                <div class="controls">
                    <select name="turn">
                        @for (var i = 1; i <= 22; i++)
                        {
                            if (Model.Turn == i)
                            {
                                <option selected>@i</option>
                            }
                            else
                            {
                                <option>@i</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="team">Lag:</label>
                <div class="controls">
                    <input type="text"
                           name="team"
                           placeholder="Lag"
                           autofocus="autofocus"
                           value="@Model.Team"
                           required />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="location">Plats:</label>
                <div class="controls">
                    <input type="text"
                           name="location"
                           placeholder="Bowlinghall"
                           value="@Model.Location"
                           required />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="opponent">Motståndare:</label>
                <div class="controls">
                    <input type="text"
                           name="opponent"
                           placeholder="Motståndare"
                           value="@Model.Opponent"
                           required />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="date">Datum:</label>
                <div class="controls">
                    <input type="date"
                           name="date"
                           value="@Model.Date.ToShortDateString()"
                           required />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="time">Tid:</label>
                <div class="controls">
                    <input type="time"
                           name="time"
                           value="@Model.Time"
                           required />
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button class="btn btn-primary" type="submit">Spara</button>
                </div>
            </div>
        }
    </div>
</div>
