@model ActivityViewModel

@{
    var tenantConfiguration = Html.GetTenantConfiguration();
    var showViewMoreLink = Convert.ToBoolean(ViewData["showViewMoreLink"]);
    var showComments = Convert.ToBoolean(ViewData["showComments"]);

}
<div class="row">
    <div class="span12">
        <div class="well well-small activity-container">
            <img class="activity-image"
                 src="@Url.ContentCacheBreak($"~/Content/css/images/{tenantConfiguration.AppleTouchIcon}")"
                 alt="@tenantConfiguration.FullTeamName" />
            <div class="activity-content-container">
                <h4>
                    @Model.Title
                    <em>
                        (<time datetime="@($"{Model.ActivityDate:s}")">@Model.ActivityDate.ToString("d MMMM HH:mm")</time>)
                    </em>
                </h4>
                @if (showViewMoreLink)
                {
                    <p class="activity-content-message activity-content-message-clamped">@Model.Message</p>
                    @Html.ActionLink("Visa mer", "Index", "ActivityDetails", null, null, "disqus_thread", new { Model.Id }, null)
                }
                else
                {
                    <p class="activity-content-message">@Model.Message</p>
                }
            </div>
        </div>
    </div>
</div>
@if (showComments)
{
    <div class="row">
        <div class="span12">
            <div id="disqus_thread"></div>
            <script>
                /**
                 *  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
                 *  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables*/
