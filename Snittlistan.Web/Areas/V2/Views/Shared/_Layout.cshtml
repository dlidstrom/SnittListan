@using Snittlistan.Web
@{
    ViewBag.Title = "Snittlistan";
    Bundles.Reference("Content/css/main.less");
    Bundles.Reference("Content/css/glyphicons.css");
    Bundles.Reference("Content/templates");
    Bundles.Reference("Content/external/hogan/hogan.js", "hogan");
}
<!DOCTYPE html>
<html lang="se">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1.0,user-scalable=no" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <meta name="google-site-verification" content="g8KwkjfVGgtu5zxYGhIEfJS4JGVkCMS1YMdp5WNOOpU" />
        <link rel="apple-touch-icon" href="@Url.Content("~/Content/css/images/touch-icon-iphone-precomposed.png")" />
        <link rel="apple-touch-icon" sizes="72x72" href="@Url.Content("~/Content/css/images/touch-icon-ipad-precomposed.png")" />
        <link rel="apple-touch-icon" sizes="114x114" href="@Url.Content("~/Content/css/images/touch-icon-iphone-retina-precomposed.png")" />
        <link rel="apple-touch-icon" sizes="144x144" href="@Url.Content("~/Content/css/images/touch-icon-ipad-retina-precomposed.png")" />
        <title>@ViewBag.Title</title>
        @if (Html.ApplicationMode() == ApplicationMode.Debug)
        {
            <link href="@Url.Content("~/Content/external/bootstrap/css/bootstrap.css")" rel="stylesheet" />
            <link href="@Url.Content("~/Content/external/bootstrap/css/bootstrap-responsive.css")" rel="stylesheet" />
        }
        else
        {
            <link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.1.0/css/bootstrap-combined.min.css" rel="stylesheet" type="text/css" />
        }
        @Bundles.RenderStylesheets()
        <!--[if lt IE 9]><script src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6/html5shiv.min.js"></script><![endif]-->
    </head>
    <body>
        @* header will be placed here, as first element under body *@
        @* modal dialogs are placed here *@
        <div id="modal-root"></div>
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a href="@Url.RouteUrl("V2_default", new { controller = "Roster", action = "Index" })" class="brand">
                        Snittlistan
                    </a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            @Content.MenuLink(Html, Url, "Omgångar", "sprite-glyphicons_045_calendar", "Roster", Url.Action("Index", "Roster"))
                            @Content.MenuLink(Html, Url, "Frånvaro", "sprite-glyphicons_045_calendar", "Absence", Url.Action("Index", "Absence"))
                            @Content.MenuLink(Html, Url, "Medlemmar", "sprite-glyphicons_043_group", "Player", Url.Action("Index", "Player"))
                            @Content.MenuLink(Html, Url, "2011-2012", "sprite-glyphicons_090_table", "Home", Url.Action("Index", "Home", new { area = "V1" } ))
                        </ul>
                        <ul class="nav pull-right">
                            @if (Request.IsAuthenticated)
                            {
                                <li>
                                    <p class="navbar-text">
                                        @User.Identity.Name
                                    </p>
                                </li>
                                if (Request.IsAdmin(User))
                                {
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            <i class="sprite-glyphicons_019_cogwheel"></i>
                                            <b class="caret"></b>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="@Url.Action("Index", "AdminTasks")">
                                                    <i class="sprite-glyphicons_023_cogwheels"></i>
                                                    Administration
                                                </a>
                                            </li>
                                            <li class="divider"></li>
                                            <li>
                                                <a href="@Url.Action("LogOff", "Authentication")">
                                                    <i class="sprite-glyphicons_203_lock"></i>
                                                    Logga ut
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a href="@Url.Action("LogOff", "Authentication")">
                                            <i class="sprite-glyphicons_203_lock"></i>
                                            Logga ut
                                        </a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li>
                                    <a href="@Url.Action("LogOn", "Authentication")">
                                        <i class="sprite-glyphicons_204_unlock"></i>
                                        Logga in
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div id="main" class="container">
            @RenderBody()
            @*
            <section class="page-header">
                <h1>Kommande matchomgångar</h1>
            </section>
            <div class="row-fluid">
                <div class="span6">
                    <div class="alert alert-info">
                        <button class="close" data-dismiss="alert">
                            <i class="icon-pencil"></i>
                        </button>
                        Om du inte kan medverka, vänligen meddela detta så tidigt som möjligt.
                        <i class="icon-question-sign pull-right" title="Meddelande" data-content="Här tänkte jag att pennan är klickbar, och att man då kan redigera texten. Troligen måste man ha en viss roll för att ha möjlighet att ändra texten."></i>
                    </div>
                </div>
                <div class="span6">
                    <div class="alert alert-error">
                        <button class="close" data-dismiss="alert">&times;</button>
                        <button class="btn btn-mini btn-primary">Logga in</button> för att kvittera spel eller meddela din frånvaro.
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                @Html.Partial("_Turn3")
            </div>
            *@
            @*
            <section class="page-header">
                <h1>
                    Avklarade
                    <i class="icon-question-sign" title="Avklarade omgångar" data-placement="right" data-content="Den här delen kommer vara en egen sida."></i>
                </h1>
            </section>
            <div class="row-fluid">
                <div class="span3">
                    <table class="table table-medals">
                        <tr><th colspan="2">Medaljer</th></tr>
                        <tr><td><span class="label label-personal-best">PB</span></td><td>Personbästa</td></tr>
                        <tr><td><span class="label label-season-best">SB</span></td><td>Säsongsbästa</td></tr>
                        <tr><td><span class="label label-miss-free">missfri</span></td><td>En serie med enbart täckta rutor</td></tr>
                        <tr><td><span class="label label-300">300</span></td><td>En 300-serie</td></tr>
                    </table>
                </div>
            </div>
            <div class="row-fluid">
                @Html.Partial("_CompletedTurns")
            </div>
            *@
            @*
            <section class="page-header">
                <h1>
                    Christer Liedholm
                    <i class="icon-question-sign" title="Att göra" data-placement="right" data-content="Lägg till vy för spelare. En spelares medaljer ska visas. Lägg till förklaring på medaljerna (eller titel åtminstone). Lägg till vy för att göra laguttagningen."></i>
                </h1>
            </section>
            <div class="row-fluid">
                @Html.Partial("_Player")
            </div>
            *@
        </div>
        @* Use content delivery networks *@
        @if (Html.ApplicationMode() == ApplicationMode.Debug)
        {
            @Content.External("jquery/jquery.js", Url)
            @Content.External("bootstrap/js/bootstrap.js", Url)
            @Content.External("underscore/underscore-1.3.3/underscore.js", Url)
            @Content.External("backbone/backbone-0.9.2/backbone.js", Url)
        }
        else
        {
            @Content.Script(ScriptType.JQuery)
            <script src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.1.0/js/bootstrap.min.js" type="text/javascript"></script>
            <script src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.3/underscore-min.js" type="text/javascript"></script>
            <script src="http://cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.2/backbone-min.js" type="text/javascript"></script>
        }

        @* local scripts *@
        @Bundles.RenderScripts("hogan")
        @Bundles.RenderHtmlTemplates()
        @Bundles.RenderScripts()
        @RenderSection("scripts", false)
    </body>
</html>
