@model EditRosterPlayersViewModel

<h4>Omgång @Model.Roster.Turn</h4>
<div class="row">
    <div class="span6">
        @Html.DisplayFor(model => model.Roster, "Roster", new { hideControls = true })
    </div>
</div>
<div class="row">
    <div class="span8">
        @using (Html.BeginForm(
            "EditPlayers",
            "Roster",
            new { id = Model.Id },
            FormMethod.Post,
            new { @class = "form-horizontal"}))
        {
            @Html.Hidden("IsFourPlayer", Model.Roster.IsFourPlayer)
            @Html.DisplayFor(model => Html.ViewData.ModelState, "ValidationSummary")
            if (Model.Roster.IsFourPlayer)
            {
                <table class="table table-condensed">
                    <tr>
                        <th></th>
                        <th>Namn</th>
                    </tr>
                    @for (var i = 0; i < 4; i++)
                    {
                        <tr>
                            <td class="table-id">@(i+1)</td>
                            <td>
                                <select name="@string.Format("Player{0}", i + 1)" required>
                                    <option value="">Välj spelare</option>
                                    @foreach (var player in Model.AvailablePlayers)
                                    {
                                        var elementAtOrDefault = Model.Roster.Players.ElementAtOrDefault(i);
                                        if (elementAtOrDefault != null && player.Id == elementAtOrDefault.Item1)
                                        {
                                            <option value="@player.Id" selected="selected">@player.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@player.Id">@player.Name</option>
                                        }
                                    }
                                </select>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td class="table-id">R</td>
                        <td>
                            <select name="reserve1" required>
                                <option value="">Välj reserv</option>
                                @foreach (var player in Model.AvailablePlayers)
                                {
                                    var elementAtOrDefault = Model.Roster.Players.ElementAtOrDefault(4);
                                    if (elementAtOrDefault != null && player.Id == elementAtOrDefault.Item1)
                                    {
                                        <option value="@player.Id" selected="selected">@player.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@player.Id">@player.Name</option>
                                    }
                                }
                            </select>
                        </td>
                    </tr>
                </table>
            }
            else
            {
                <table class="table table-condensed">
                    <tr>
                        <th>Bord</th>
                        <th>Namn</th>
                    </tr>
                    @for (var i = 0; i < 4; i++ )
                    {
                        <tr>
                            <td class="table-id" rowspan="2">@(i+1)</td>
                            <td>
                                <select name="@string.Format("Table{0}Player1", i + 1)" required>
                                    <option value="">Välj spelare</option>
                                    @foreach (var player in Model.AvailablePlayers)
                                    {
                                        var elementAtOrDefault = Model.Roster.Players.ElementAtOrDefault(2 * i);
                                        if (elementAtOrDefault != null && player.Id == elementAtOrDefault.Item1)
                                        {
                                            <option value="@player.Id" selected="selected">@player.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@player.Id">@player.Name</option>
                                        }
                                    }
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <select name="@string.Format("Table{0}Player2", i + 1)" required>
                                    <option value="">Välj spelare</option>
                                    @foreach (var player in Model.AvailablePlayers)
                                    {
                                        var elementAtOrDefault = Model.Roster.Players.ElementAtOrDefault(2 * i + 1);
                                        if (elementAtOrDefault != null && player.Id == elementAtOrDefault.Item1)
                                        {
                                            <option value="@player.Id" selected="selected">@player.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@player.Id">@player.Name</option>
                                        }
                                    }
                                </select>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td class="table-id" rowspan="2">R</td>
                        <td>
                            <select name="reserve1">
                                <option value="">Välj reserv 1</option>
                                @foreach (var player in Model.AvailablePlayers)
                                {
                                    var elementAtOrDefault = Model.Roster.Players.ElementAtOrDefault(8);
                                    if (elementAtOrDefault != null && player.Id == elementAtOrDefault.Item1)
                                    {
                                        <option value="@player.Id" selected="selected">@player.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@player.Id">@player.Name</option>
                                    }
                                }
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <select name="reserve2">
                                <option value="">Välj reserv 2</option>
                                @foreach (var player in Model.AvailablePlayers)
                                {
                                    var elementAtOrDefault = Model.Roster.Players.ElementAtOrDefault(9);
                                    if (elementAtOrDefault != null && player.Id == elementAtOrDefault.Item1)
                                    {
                                        <option value="@player.Id" selected="selected">@player.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@player.Id">@player.Name</option>
                                    }
                                }
                            </select>
                        </td>
                    </tr>
                </table>
            }
            <div class="control-group">
                <div class="controls">
                    <label class="checkbox">
                        @Html.EditorFor(model => model.Preliminary) Preliminär (visas inte)
                    </label>
                </div>
            </div>
            <div class="form-actions">
                <button class="btn btn-primary btn-large" type="submit">Spara</button>
                @Html.ActionLink("Avbryt", "View", new { season = Model.Roster.Season, turn = Model.Roster.Turn }, new { @class = "btn btn-large" })
            </div>
        }
    </div>
</div>
@if (Request.IsAuthenticated)
{
    @Html.Action("PlayerStatus", new
    {
        turn = Model.Roster.Turn,
        season = Model.Roster.Season
    })
}