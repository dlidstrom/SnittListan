@model RosterViewModel

@if (Request.IsAuthenticated)
{
    <a href="@Url.Action("EditPlayers", new { Model.Id })" class="pull-right">
        <i class="sprite-glyphicons_151_edit"></i>
    </a>
}
<table class="table table-condensed">
    <tr>
        <th>Bord</th>
        <th>Namn</th>
    </tr>
    @for (var i = 0; i < 4; i++)
    {
        <tr>
            <td rowspan="2">@(i+1)</td>
            <td>@Model.Players.ElementAtOrDefault(2 * i)</td>
        </tr>
        <tr>
            <td>@Model.Players.ElementAtOrDefault(2 * i + 1)</td>
        </tr>
    }
    <tr>
        <td rowspan="2">R</td>
        <td>@Model.Players.ElementAtOrDefault(8)</td>
    </tr>
</table>
