@model Snittlistan.Web.Areas.V2.Controllers.AdminRosterAcceptController.ViewModel
@{
    ViewBag.Title = "Välj spelare";
}

<div class="row">
    <div class="span12">
        <div class="well well-small">
            @Html.DisplayFor(x => x.Header)
        </div>
    </div>
</div>
<div class="row">
    <div class="span12">
        @using (Html.BeginForm(
            "AcceptPlayer",
            "AdminRosterAccept",
            FormMethod.Post,
            new
            {
                @class = "form-horizontal"
            }))
        {
            @Html.HiddenFor(x => x.Model.RosterId)
            @Html.HiddenFor(x => x.Model.Season)
            @Html.HiddenFor(x => x.Model.Turn)
            <div class="control-group">
                @Html.LabelFor(x => x.Model.PlayerId, new { @class = "control-label" })
                <div class="controls">
                    @Html.DropDownListFor(
                        x => x.Model.PlayerId,
                        (SelectListItem[])ViewBag.PlayerId,
                        new
                        {
                            required = "required",
                            id = "playerId"
                        })
                    <span class="help-block">
                        Välj spelare som deltar.
                    </span>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button class="btn btn-primary btn-large" type="submit">Spara</button>
                    <a class="btn btn-large"
                       href="@Url.Action(
                                 "View",
                                 "Roster",
                                 new
                                 {
                                     Model.Model.Season,
                                     Model.Model.Turn
                                 })">
                        Avbryt
                    </a>
                </div>
            </div>
        }
    </div>
</div>