@using Snittlistan.Web.Areas.V2.Domain
@model List<PlayerViewModel>

@helper ShowPlayer(PlayerViewModel player)
{
    <tr>
        <td>@player.Name</td>
        <td>@player.StatusText</td>
        @if (Request.IsAuthenticated)
        {
            <td>
                <a href="mailto:@player.Email">@player.Email</a>
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = player.Id.Substring(player.Id.LastIndexOf('-') + 1) })">
                    <i class="sprite-glyphicons_151_edit"></i>
                </a>
            </td>
            <td>
                <a href="@Url.Action("Delete", new { id = player.Id.Substring(player.Id.LastIndexOf('-') + 1) })">
                    <i class="sprite-glyphicons_016_bin"></i>
                </a>
            </td>
        }
    </tr>
}

<div class="row">
    <div class="span6">
        <h2>Spelare och supporters</h2>
    </div>
</div>
<div class="row">
    <div class="span6">
        @if (Request.IsAuthenticated)
        {
            <a class="pull-left" href="@Url.Action("Create")">
                <i class="sprite-glyphicons_006_user_add"></i>
                Lägg till spelare
            </a>
            <a class="btn btn-small btn-primary pull-right" href="mailto:@string.Join(",", Model.Where(x => x.Status != Player.Status.Inactive).Select(x => x.Email))">
                Skicka e-post till alla
            </a>
            <div class="clearfix"></div>
        }
    </div>
</div>
<div class="row">
    <div class="span8">
        <table class="table table-condensed table-striped">
            <tr>
                <th>Namn</th>
                <th>Status</th>
                @if (Request.IsAuthenticated)
                {
                    <th>E-postadress</th>
                    <th></th>
                    <th></th>
                }
            </tr>
            @foreach (var player in Model.Where(x => x.Status == Player.Status.Active))
            {
                @ShowPlayer(player)
            }

            @foreach (var player in Model.Where(x => x.Status == Player.Status.Supporter))
            {
                @ShowPlayer(player)
            }

            @if (Request.IsAuthenticated)
            {
                foreach (var player in Model.Where(x => x.Status == Player.Status.Inactive))
                {
                    @ShowPlayer(player)
                }
            }
        </table>
    </div>
</div>
