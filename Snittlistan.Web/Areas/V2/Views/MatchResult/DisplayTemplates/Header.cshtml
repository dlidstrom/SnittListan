@model ResultHeaderViewModel

<div class="well well-small">
    <dl class="dl-horizontal">
        <dt>lag</dt>
        <dd>@Content.TeamLabel(Model.TeamLevel, Model.Team)</dd>
        <dt>plats</dt>
        <dd>@Model.Location</dd>
        <dt>motstånd</dt>
        <dd>@Model.Opponent</dd>
        <dt>när</dt>
        <dd>
            <em>
                <time datetime="@Model.Date.ToString("s")">
                    @Model.Date.ToString("dddd d MMMM HH:mm")
                </time>
            </em>
        </dd>
        <dt>resultat</dt>
        <dd>@Model.FormattedResult</dd>
        @if (Model.BitsMatchId != 0)
        {
            <dt>BITS</dt>
            <dd>
                <a href="@Html.GenerateBitsUrl(Model.BitsMatchId)">
                    Matchfakta
                    <i class="icon-share-alt"></i>
                </a>
            </dd>
        }
    </dl>
</div>
