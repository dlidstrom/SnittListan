@model CreateUserViewModel

@{
    ViewBag.Title = "Skapa användare";
}

<div class="row">
    <div class="span8">
        <h3>@ViewBag.Title</h3>
        @using (Html.BeginForm("CreateUser", "AdminTasks", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.DisplayFor(model => Html.ViewData.ModelState, "ValidationSummary")
            @Html.Partial("_UserEditor", Model)
            <div class="form-actions">
                <button class="btn btn-primary btn-large" type="submit">Spara</button>
                @Html.ActionLink("Avbryt", "Users", null, new { @class = "btn btn-large" })
            </div>
        }
    </div>
</div>
